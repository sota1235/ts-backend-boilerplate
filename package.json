{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "description": "Simple boilerplate for @sota1235",
  "main": "index.js",
  "engines": {
    "node": ">=v12.10.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/jest": "24.9.1",
    "@types/morgan": "1.7.37",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "lint-staged": "10.0.3",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-jest": "25.0.0",
    "ts-node": "8.6.2"
  },
  "scripts": {
    "build": "tsc",
    "watch": "nodemon",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "node lib/index.js",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "npm run eslint --fix",
    "prettier": "prettier './src/**/*.ts' --write",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "keywords": [],
  "author": "@sota1235",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm run start:dev"
  }
}
