{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "description": "Simple boilerplate for @sota1235",
  "main": "index.js",
  "engines": {
    "node": ">=v12.10.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "24.0.18",
    "@types/morgan": "^1.7.37",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "lint-staged": "9.4.1",
    "nodemon": "^1.19.3",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "nodemon",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "node lib/index.js",
    "fix": "prettier --write ./src/**/*.ts",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint": "npm run fix && npm run tslint",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "keywords": [],
  "author": "@sota1235",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm run start:dev"
  }
}
