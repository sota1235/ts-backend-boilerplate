{
  "private": true,
  "name": "ts-backend-boilerplate",
  "description": "Simple boilerplate for @sota1235",
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@sota1235/eslint-config": "^2.0.0",
    "@stoplight/spectral": "^5.3.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/morgan": "1.9.3",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.1.1",
    "lint-staged": "11.1.2",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "redoc-cli": "^0.12.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1"
  },
  "scripts": {
    "build": "tsc",
    "watch": "nodemon",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "node lib/index.js",
    "doc:dev": "redoc-cli serve ./spec.yml",
    "doc:build": "redoc-cli bundle ./spec.yml",
    "doc:lint": "spectral lint ./spec.yml",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "npm run eslint --fix",
    "prettier": "prettier './src/**/*.ts' --write",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "keywords": [],
  "author": "@sota1235",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm run start:dev"
  }
}
